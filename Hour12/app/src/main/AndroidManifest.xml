<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.studia.hour12">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hour12">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".VideoViewActivity"
            android:label="@string/title_activity_video_view" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".VideoViewMediaControllerActivity"
            android:label="@string/title_activity_video_view_media_controller" >
        </activity>

        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".VideoViewPlayPause"
            android:label="@string/title_activity_video_view_play_pause" >
        </activity>
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name=".AudioActivity"
            android:label="@string/title_activity_audio" >
        </activity>
    </application>

</manifest>