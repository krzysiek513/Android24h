<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.studia.hour14">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hour14">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WritePrivateActivity"
            android:label="@string/title_activity_write_private" >
        </activity>
        <activity
            android:name=".WriteExternalActivity"
            android:label="@string/title_activity_write_external" >
        </activity>

        <activity
            android:name=".WriteExternalPublicActivity"
            android:label="@string/title_activity_write_external_public" >
        </activity>
    </application>

</manifest>